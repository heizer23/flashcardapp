<!-- res/layout/item_generated_question.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_generated_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Generated Question"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/et_generated_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Generated Answer"
        android:inputType="textMultiLine" />

    <CheckBox
        android:id="@+id/cb_select_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select this question" />

</LinearLayout>
