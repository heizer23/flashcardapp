<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- EditText for XML input -->
    <EditText
        android:id="@+id/et_xml_input"
        android:hint="Paste XML formatted Questions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minHeight="200dp"
        android:maxLines="20" />

    <!-- LinearLayout for the buttons, with horizontal orientation -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Button to copy the content of EditText -->
        <Button
            android:id="@+id/btn_copy_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Copy" />

        <!-- Button to clear the content of EditText -->
        <Button
            android:id="@+id/btn_clear_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear" />

        <!-- Button to import flashcards -->
        <Button
            android:id="@+id/btn_import"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import" />

    </LinearLayout>

</LinearLayout>
